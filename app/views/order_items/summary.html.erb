<div id="summary-form">
  <%= form_tag(summary_path, method: :get) do %>
  <p>From: <%= date_select "summary", "start_date" %>  To:   <%= date_select "summary", "end_date" %></p>
  <p><%= submit_tag "Summarise", :name => nil %></p>
  <% end %>
</div>

<h1 class="page_title">SUMMARY FOR <%= params[:start_date]%> TO <% params[:end_date] %></h1>
<table>
  <tr>
    <th id='description'>Description</th>
    <th id='quantity'>Qty</th>
  </tr>
<% @order_items.each do |o| %>
  <tr>
      <td class="col-md-11"><%= o[0] %></td>
      <td class="col-md-1"><%= o[1] %></td>
  </tr>
<% end %>
</table>